{
	// VS Code tasks for AgriSense: stable backend run (no reload) and HTTP smoke checks
	"$schema": "https://json.schemastore.org/vscode/tasks.json",
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Backend (Uvicorn - no reload)",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/AGRISENSEFULL-STACK"
			},
			"command": ".venv\\Scripts\\python.exe -m uvicorn agrisense_app.backend.main:app --port 8004",
			"isBackground": true,
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "HTTP Smoke (Backend)",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/AGRISENSEFULL-STACK"
			},
			"command": "$env:AGRISENSE_DISABLE_ML='1'; .venv\\Scripts\\python.exe scripts\\chatbot_http_smoke.py",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
			},
			{
				"label": "Build Chatbot Artifacts (CSV)",
				"type": "shell",
				"options": {
					"cwd": "${workspaceFolder}/AGRISENSEFULL-STACK"
				},
				"command": "$ErrorActionPreference='Stop'; $env:AGRISENSE_DISABLE_ML='1'; .venv\\Scripts\\python.exe scripts\\build_chatbot_artifacts.py --csv merged_chatbot_training_dataset.csv --out-dir agrisense_app/backend",
				"presentation": {
					"reveal": "always",
					"panel": "dedicated"
				}
			},
			{
				"label": "Reload Chatbot",
				"type": "shell",
				"options": {
					"cwd": "${workspaceFolder}/AGRISENSEFULL-STACK"
				},
				"command": ".venv\\Scripts\\python.exe scripts\\reload_chatbot.py",
				"presentation": {
					"reveal": "always",
					"panel": "shared"
				}
		}
	]
}